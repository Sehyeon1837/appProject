<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="parkMap.parkListViewItem"
    android:id="@+id/parkList"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/listViewItem"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/parkImage"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_weight="2"
            android:src="@drawable/park00000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/parkName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ridi_batang"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:textSize="18dp"
                    android:text="parkName" />

                <TextView
                    android:id="@+id/parkArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ridi_batang"
                    android:layout_weight="1"
                    android:text="parkArea" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/parkDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/ridi_batang"
                    android:text="distance" />

                <TextView
                    android:id="@+id/parkAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/ridi_batang"
                    android:text="address" />

            </LinearLayout>

            <TextView
                android:id="@+id/parkPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ridi_batang"
                android:textColor="#0000FF"
                android:text="phoneNumber" />

            <LinearLayout
                android:id="@+id/parkFacility"
                android:layout_width="match_parent"
                android:layout_height="19dp"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal"></LinearLayout>
            <LinearLayout
                android:id="@+id/parkFacility2"
                android:layout_width="match_parent"
                android:layout_height="19dp"
                android:orientation="horizontal"></LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/naviBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/iconnavi" />
    </LinearLayout>
</LinearLayout>